doctype html
html
  head
    meta(charset='utf-8')
    title TestGen
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet', href='/codemirror/lib/codemirror.css')
    link(rel='stylesheet', type='text/css', href='/style.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
    script(src='/codemirror/lib/codemirror.js')
    script(src='/codemirror/mode/clike/clike.js')
  body
    .container
      h1 Testgen
      ul.nav.nav-tabs(role='tablist')
        li#input-button.active
          a(href='#') Home
        li#output-button
          a(href='#') Output
        li#test-button
          a(href='#') Test case
        li#path-button
          a(href='#') Path exploration
        li#about-button
          a(href='#') About
      .nav.pull-right
        p.navbar-text
          | Signed in as 
          a.navbar-link(href='#') #{user.username}
        button.btn.btn-primary.navbar-btn.navbar-right(type='button')
          a(href='/logout') Sign out
      #Home
        .row
          .col-md-5.col-lg-5
            #up-file
              form(action='#', method='post', enctype='multipart/form-data')
                h4 Upload file
                input#program_file(type='file', value='Choose file', onchange='showFileContent()')
            #up-tc
              form(action='#', method='post', enctype='multipart/form-data')
                h4 Upload your own test case (optional)
                input(type='file', value='Choose file')
            button#run.btn.btn-primary.btn-lg(type='button', onclick='sendToServer()')
              | Run test
          .col-md-7.col-lg-5
            #content
        // Modal
        #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
          .modal-dialog(role='document')
            .modal-content
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                  span(aria-hidden='true') Ã—
                h2#myModalLabel.modal-title Execution in progress
              .modal-footer
                button.btn.btn-primary(type='button', data-dismiss='modal') Close
      #Output
        h2 Output
        textarea#output(rows='10', cols='20')
      #Path
        h2 Path exploration
        #coverage-code
      #Test-case
        h2 Test case
        textarea#test_case(rows='30', cols='30')
    script(src='/main.js')
